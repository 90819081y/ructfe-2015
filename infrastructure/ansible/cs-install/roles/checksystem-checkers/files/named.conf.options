options {
        recursion yes;
        additional-from-auth no;
        additional-from-cache no;

        directory "/var/cache/bind";
        query-source address * port 5301;
        forward first;
        forwarders {
#               2a02:6b8::1:1; 2a02:6b8:0:3400::1;
               8.8.8.8; 8.8.4.4;
        };
        auth-nxdomain no;
        allow-query { any; };
        listen-on-v6 { any; };
};
