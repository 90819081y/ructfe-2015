<!DOCTYPE html>
<html>
<% include blocks/head.ejs %>
<body class="service-page" data-spy="scroll" data-target="#main-navbar">
<% include blocks/b_head.ejs %>
<section class="main-block" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="caption">


            <div class="row">
                <div class="col-sm-2 center-block">
                    <a href="/">
                        <img src="/static/logos/tax.png" class="logo img-responsive">
                    </a>
                </div>
                <div class="col-sm-8 content-block">
                    <h3>Profile</h3>

                    <% for (var i in datalist) { var data = datalist[i]; %>
                    <div><strong><%= data.name %></strong>: <%= data.private %></div>
                    <% } %>

                    <form action="<%= resolve('user') %>" method="post" class="form">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Your name" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="private" id="private" cols="30" rows="10" placeholder="Your personal data" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default">Save</button>
                        </div>
                    </form>
                </div>
            </div>


        </div>
    </div>
</section>
<% include blocks/b_footer.ejs %>
</body>
</html>
