<!DOCTYPE html>
<html>
<% include blocks/head.ejs %>
<body>
<% include blocks/b_head.ejs %>
<div class="content">
    <h1>Profile</h1>

    <% for (var i in datalist) { var data = datalist[i]; %>
        <div><strong><%= data.name %></strong>: <%= data.private %></div>
    <% } %>

    <form action="<%= resolve('user') %>" method="post">
        <input type="text" name="name" placeholder="name">
        <textarea name="private" id="private" cols="30" rows="10" placeholder="Your personal data"></textarea>
        <button type="submit">Save</button>
    </form>
</div>
<% include blocks/b_footer.ejs %>
</body>
</html>
